@model API.DataModels.Food.RecipeModel
@{
    ViewData["Title"] = "Recipe";
}
@section Styles
{
    <link rel="stylesheet" href="~/css/Meals.css"/>
}

<div class="text-center">
    <br/>
    
    <h2>Meal: @Model.Name (@Model.Rating‚≠ê, @Model.ReviewCount reviews)</h2>
    <h3>Difficulty: @Model.Difficulty</h3>
    <h3>Servings: @Model.Servings (CaloriesPerServing: @Model.CaloriesPerServing)</h3>
    <h3>Minutes: @Model.CookTimeMinutes (Prep time: @Model.PrepTimeMinutes)</h3>
    <h3>Meal Type: @string.Join(", ", Model.MealType)</h3>
    <h3>Tags: @string.Join(", ", Model.Tags)</h3>
    <h3>Cuisine: @Model.Cuisine</h3>
    @if (@Model.UserId != 0)
    {
        // 0 = mock data, anything else = user created 
        // Later change to username
        <h3>Created by userId: @Model.UserId</h3>
    }
    
    
    <img src="@Model.Image" alt="@Model.Name"/>
</div>

<div>
    <h4>Ingredients:</h4>
    @foreach (string ingredient in Model.Ingredients)
    {
        <h4>@ingredient,</h4>
    }

    <br/>

    <h4>Instructions:</h4>
    @for (int i = 0; i < Model.Instructions.Count; i++)
    {
        string instruction = Model.Instructions[i];
        <h4>@(i + 1). @instruction</h4>
    }
</div>
