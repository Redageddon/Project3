@using API.DataModels.Food
@model PlannerModel
@{
    ViewData["Title"] = "Create Planner";
    bool isUserLoggedIn = ViewBag.IsUserLoggedIn is bool b && b;

    // Planner should use Meals, not Recipes
    List<MealsModel> mealOptions = ViewBag.MealOptions as List<MealsModel> ?? [];
}

<h2 class="mb-4">Create Planner</h2>
<hr />

<div class="container mt-4">
    @if (!isUserLoggedIn)
    {
        @await Html.PartialAsync("_LoginRequiredModal")
    }
    else
    {
        <form asp-action="CreatePlanner" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="PlannedDate" class="form-label">Planned Date</label>
                <input asp-for="PlannedDate" type="date" class="form-control" />
                <span asp-validation-for="PlannedDate" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="BreakfastId" class="form-label">Breakfast (max 1)</label>
                    <select asp-for="BreakfastId" class="form-select">
                        <option value="">-- None --</option>
                        @foreach (MealsModel m in mealOptions)
                        {
                            <option value="@m.MealId">@(!string.IsNullOrWhiteSpace(m.Name) ? m.Name : $"Meal #{@m.MealId}")</option>
                        }
                    </select>
                    <span class="form-text">Choose at most one breakfast item.</span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="LunchId" class="form-label">Lunch (max 1)</label>
                    <select asp-for="LunchId" class="form-select">
                        <option value="">-- None --</option>
                        @foreach (MealsModel m in mealOptions)
                        {
                            <option value="@m.MealId">@(!string.IsNullOrWhiteSpace(m.Name) ? m.Name : $"Meal #{@m.MealId}")</option>
                        }
                    </select>
                    <span class="form-text">Choose at most one lunch item.</span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="DinnerId" class="form-label">Dinner (max 1)</label>
                    <select asp-for="DinnerId" class="form-select">
                        <option value="">-- None --</option>
                        @foreach (MealsModel m in mealOptions)
                        {
                            <option value="@m.MealId">@(!string.IsNullOrWhiteSpace(m.Name) ? m.Name : $"Meal #{@m.MealId}")</option>
                        }
                    </select>
                    <span class="form-text">Choose at most one dinner item.</span>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save Planner</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        </form>
    }
</div>

@section Scripts {
    @if (!isUserLoggedIn)
    {
        <script src="~/js/Login-Modal.js"></script>
    }
}
