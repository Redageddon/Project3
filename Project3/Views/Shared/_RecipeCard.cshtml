@model API.DataModels.Food.RecipeModel
@{ Layout = null; }

<a href="/Recipes/@Model.Id" class="card dark text-decoration-none">
    @if (!string.IsNullOrWhiteSpace(Model.Image))
    {
        <img src="@Model.Image" alt="@Model.Name" />
    }
    else
    {
        <div class="recipe-card__placeholder d-flex align-items-center justify-content-center">
            <span class="text-muted small">No image</span>
        </div>
    }

    <section>
        <h2 class="recipe-card__title m-0">
            @Model.Name
        </h2>
        <p>@Model.Rating‚≠ê</p>
        <div>
            <div class="tag">
                <i class="bi bi-card-heading"></i> @Model.ReviewCount reviews
            </div>
            <button onclick="event.stopPropagation()">
                View Recipe
            </button>
        </div>
    </section>
</a>
