@model API.DataModels.Food.RecipeModel
@{ Layout = null; }

<a href="/Recipes/@Model.RecipeId" class="recipe-card text-decoration-none">
    @if (!string.IsNullOrWhiteSpace(Model.Image))
    {
        <img src="@Model.Image" alt="@Model.Name" class="recipe-card__image" />
    }
    else
    {
        <div class="recipe-card__placeholder d-flex align-items-center justify-content-center">
            <span class="recipe-card__placeholder-text">No image</span>
        </div>
    }

    <section class="recipe-card__body">
        <h2 class="recipe-card__title">
            @Model.Name
        </h2>

        <p class="recipe-card__rating">
            @Model.Rating⭐ · @Model.ReviewCount reviews
        </p>

        <div class="recipe-card__footer">

            <button type="button"
                    class="recipe-card__button"
                    onclick="event.stopPropagation(); window.location.href='/Recipes/@Model.RecipeId';">
                View Recipe
            </button>
        </div>
    </section>
</a>