@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Project3</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Project3.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @await RenderSectionAsync("Styles", false)
</head>
<body>
@{
    HttpContext? httpContext = HttpContextAccessor.HttpContext;
    string? sessionId = httpContext?.Session.GetString("SessionId");
    string? username  = httpContext?.Session.GetString("Username");

    bool isLoggedIn = !string.IsNullOrEmpty(sessionId) && !string.IsNullOrEmpty(username);
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Project3</a>
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                @* LEFT SIDE: main navigation *@
                <ul class="navbar-nav">
                    @* RECIPES DROPDOWN *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark"
                           href="#"
                           id="recipesDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            Recipes
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="recipesDropdown">
                            <li>
                                <a class="dropdown-item"
                                   asp-area=""
                                   asp-controller="Recipes"
                                   asp-action="Index">
                                    Library
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-area=""
                                   asp-controller="Recipes"
                                   asp-action="CreateRecipes">
                                    Create Recipe
                                </a>
                            </li>
                        </ul>
                    </li>

                    @* MEALS DROPDOWN *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark"
                           href="#"
                           id="mealsDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            Meals
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="mealsDropdown">
                            <li>
                                <a class="dropdown-item"
                                   asp-area=""
                                   asp-controller="Meals"
                                   asp-action="Index">
                                    Library
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item"
                                   asp-area=""
                                   asp-controller="Meals"
                                   asp-action="CreateMeals">
                                    Create Meal
                                </a>
                            </li>
                        </ul>
                    </li>

                    @* PLANNER (normal link) *@
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                           asp-area=""
                           asp-controller="Planner"
                           asp-action="Index">
                            Planner
                        </a>
                    </li>
                </ul>

                @* RIGHT SIDE: login / user dropdown *@
                <ul class="navbar-nav ms-auto">
                    @if (isLoggedIn)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark"
                               href="#"
                               id="userDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Hi @username
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item"
                                       asp-area=""
                                       asp-controller="Recipes"
                                       asp-action="Index">
                                        My Recipes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-area=""
                                       asp-controller="Meals"
                                       asp-action="Index">
                                        My Meals
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form
                                          asp-controller="Login"
                                          asp-action="Logout"
                                          method="post"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" name="SessionId" value="@sessionId" class="dropdown-item">
                                            Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-area=""
                               asp-controller="Login"
                               asp-action="Index">
                                Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Project3 -
        <a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
        <a asp-area="" asp-controller="Recipes" asp-action="Index">Recipes</a>
        <a asp-area="" asp-controller="Meals" asp-action="Index">Meals</a>
        <a asp-area="" asp-controller="Planner" asp-action="Index">Planner</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>
