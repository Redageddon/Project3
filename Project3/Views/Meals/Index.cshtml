@using API.DataModels.Food
@model MealsDataModel

@{
    ViewData["Title"] = "Meals";
}

@section Styles
{
    <link rel="stylesheet" href="/css/Meals.css"/>
    <link rel="stylesheet" href="/css/Cards.css" />
}

<div class="meals-page">
    <div class="meals-page__shell">
        <header class="meals-page__header">
            <h2 class="meals-page__title">Meals Library</h2>
            <p class="meals-page__subtitle">
                Browse your saved meals â€“ each one a combination of recipes.
            </p>
        </header>

        <section class="meals-page__grid">
            @if (!Model.Meals.Any())
            {
                <div class="meals-page__empty">
                    <p>You don't have any meals yet.</p>
                    <p>Create one by combining your favourite recipes.</p>
                </div>
            }
            else
            {
                @foreach (MealsModel meal in Model.Meals)
                {
                    <div class="meals-page__card-wrap">
                        @await Html.PartialAsync("_MealsCard", meal)
                    </div>
                }
            }
        </section>
    </div>
</div>
