@using API.DataModels.Food
@model API.DataModels.Food.RecipesDataModel

@{
    ViewData["Title"] = "Meals";
    RecipeModel recipe = Model.Recipes[0];
}

<head>
    <link rel="stylesheet" href="~/css/Meals.css"/>
</head>


<h2 class="mb-3">Browse by Meal</h2>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
    @foreach (string mt in new[] { "Breakfast", "Lunch", "Dinner", "Dessert" })
    {
        <div class="col">
            <a class="card h-100 p-4 text-center" asp-controller="Recipes" asp-action="Index" asp-route-mealType="@mt">
                <h5 class="mb-1">@mt</h5>
                <span class="text-muted small">View @mt recipes</span>
            </a>
        </div>
    }
</div>

<div class="text-center">
    <h1 class="display-4">Prep your Meals</h1>
</div>

<div class="text-center">
    <br/>
    <h3>Meal: @recipe.Name (@recipe.Rating‚≠ê, @recipe.ReviewCount reviews)</h3>
    <h3>Difficulty: @recipe.Difficulty</h3>
    <h3>Servings: @recipe.Servings (CaloriesPerServing: @recipe.CaloriesPerServing)</h3>
    <h3>Minutes: @recipe.CookTimeMinutes (Prep time: @recipe.PrepTimeMinutes)</h3>
    <h3>Meal Type: @string.Join(", ", recipe.MealType)</h3>
    <h3>Tags: @string.Join(", ", recipe.Tags)</h3>
    <h3>Cuisine: @recipe.Cuisine</h3>
    <img src="@recipe.Image" alt="@recipe.Name"/>
</div>

<div>
    <h4>Ingredients:</h4>
    @foreach (string ingredient in recipe.Ingredients)
    {
        <h4>@ingredient,</h4>
    }

    <br/>

    <h4>Instructions:</h4>
    @for (int i = 0; i < recipe.Instructions.Count; i++)
    {
        string instruction = recipe.Instructions[i];
        <h4>@(i + 1). @instruction</h4>
    }
</div>
